{% extends 'base.html.twig' %}

{% block title %}Mon profil | CSNET
{% endblock %}


{% block body %}

		{% include 'include/_flashes.html.twig' %}

		<div class="container">
	<h2 class="text-center">Mes informations</h2>
	<table class="table">
		<tbody>
			<tr>
				<th scope="row">Prénom :</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th scope="row">Nom :</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th scope="row">Entreprise :</th>
				<td>{{ user.company }}</td>
			</tr>
			<tr>
				<th scope="row">Numéro de téléphone :</th>
				<td>{{ user.number }}</td>
			</tr>
			<tr>
				<th scope="row">Adresse :</th>
				<td>{{ user.adress }}</td>
			</tr>
			<tr>
				<th scope="row">Ville :</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th scope="row">Code postal :</th>
				<td>{{ user.zipcode }}</td>
			</tr>
			<tr>
				<th scope="row">Email :</th>
				<td>{{ user.email }}</td>
			</tr>
		</tbody>
	</table>
	<a href="{{ path('edit_profil', {'id': user.id}) }}" class="btn btn-info" title="Modifier le profil"><i class="bi bi-pencil-square"></i></a>
</div>

		{% endblock %}
