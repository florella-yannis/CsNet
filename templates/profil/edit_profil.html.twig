{% block body %}
<div class="row">
    <div class="col-6">

        <h2 class="text-center">Modifier mes informations</h2>

        <div class="row">
		<div class="col-8 mx-auto">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
</div>
</div>

    </div>
