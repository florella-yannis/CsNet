{% extends 'base.html.twig' %}

{% block title %}CS NET | Faire un devis {% endblock %}

{% block body %}
    <h2>Creer un devis</h2>
    <div class="row">
        <div class="col-8 mx-auto">
            {{ form_start(form) }}
                {{ form_row(form.client) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.society) }}
                {{ form_row(form.adress) }}
                {{ form_row(form.zipcode) }}
                {{ form_row(form.city) }}
                {{ form_row(form.intervention) }}
                
            {{ form_end(form) }}
            <a href="{{ path('show_dashboard') }}">Retour</a>
        </div>

    </div>
{% endblock %}
