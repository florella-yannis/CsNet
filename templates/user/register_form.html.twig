{% extends 'base.html.twig' %}

{% block title %}CS NET | Inscription {% endblock %}

{% block body %}

	<h1 class="text-center my-4">
		Inscrivez-vous
	</h1>

	<div class="row">
		<div class="col-8 mx-auto">

			{{form_start(form)}}

			<div class="row">{{form_row(form.socialreason)}}</div>

			<div class="row">
				<div class="col-6">{{form_row(form.lastname)}}</div>
				<div class="col-6">{{form_row(form.firstname)}}</div>
			</div>
			<div class="row">
				{% if form.socialreason.vars.value == 'entreprise' %}
                    <div class="col-6">{{ form_row(form.company) }}</div>
                {% else %}
                    <div class="col-6">{{ form_row(form.company, {'disabled': true}) }}</div>
                {% endif %}
                <div class="col-6">{{form_row(form.adress)}}</div>
			</div>
				<div class="row">
				<div class="col-6">{{form_row(form.city)}}</div>
				<div class="col-6">{{form_row(form.zipcode)}}</div>
				
			</div>

			<div class="row">
				<div class="col-6">{{form_row(form.number)}}</div>
				<div class="col-6">{{form_row(form.email)}}</div>
			</div>
			<div class="col-12">{{form_row(form.password)}}</div>
			<div class="row">
				{{form_row(form.submit)}}
			</div>


			{{form_end(form)}}

		{% endblock %}
